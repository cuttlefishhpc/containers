Bootstrap: localimage
From: raw.sif

%labels
    Author "Andrew S. Tupper, PhD"
    Version "1.0"
    Description "Container for running ddocent 2.9.8"
    Maintainer "Andrew S. Tupper <tuppera@uncw.edu>"
    License "MIT"

%post
    set -e

    echo "updating and adding which"
    apt-get update && apt-get install -y which && apt-get clean

    echo "creating HPC mount points"
    mkdir -p /storage /scratch

    echo "Caching the help menu"
    mkdir -p /opt
    (dDocent 2>&1) > /opt/.help_menu.txt || true

%runscript
    if [ $# -eq 0 ]; then
        exec cat /opt/.help_menu.txt
    else
        exec dDocent "$@"
    fi
