Bootstrap: localimage
From: raw.sif

%labels
    Author "Andrew S. Tupper, PhD"
    Version "1.0"
    Description "Container for running spades 4.0.0"
    Maintainer "Andrew S. Tupper <tuppera@uncw.edu>"
    License "MIT"

%post
    set -e

    echo "creating HPC mount points"
    mkdir -p /storage /scratch
    
    echo "Caching the help menu"
    mkdir -p /opt
    ls /usr/local/bin/ | grep "spades" | grep -v "\.py$" | sort > /opt/.commands.txt

%runscript
    if [ $# -eq 0 ]; then
        echo "Usage: spades@4.0.0 <command>"
        echo "Commands:"
        while IFS= read -r command; do
            echo "Â  $(basename "$command")"
        done < /opt/.commands.txt
    else
        exec "$@"
    fi
