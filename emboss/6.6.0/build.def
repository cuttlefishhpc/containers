Bootstrap: localimage
From: raw.sif

%labels
    Author "Andrew S. Tupper, PhD"
    Version "1.0"
    Description "Container for running emboss 6.6.0"
    Maintainer "Andrew S. Tupper <tuppera@uncw.edu>"
    License "MIT"

%post
    set -e

    echo "creating HPC mount points"
    mkdir -p /storage /scratch
    
%runscript
    if [ $# -eq 0 ]; then
        echo "Usage: emboss@6.6.0 <command>"
        echo "Commands:"
        echo "  seqret"
        echo "  showdb"
        echo "  ..."
        echo "see: http://emboss.open-bio.org/html/use/ch04.html"
    else
        exec "$@"
    fi
