Bootstrap: localimage
From: raw.sif

%labels
    Author "Andrew S. Tupper, PhD"
    Version "1.0"
    Description "Container for running stacks 2.65"
    Maintainer "Andrew S. Tupper <tuppera@uncw.edu>"
    License "MIT"

%post
    set -e

    echo "creating HPC mount points"
    mkdir -p /storage /scratch

%runscript
    if [ $# -eq 0 ]; then
        echo "Usage: stacks@2.65 <command>"
        echo "Commands:"
        commands=$(find /usr/local/bin -maxdepth 1 -type f -executable | grep "stack" | sort)
        for command in $commands; do
            base=$(basename "$command")
            echo "  $base"
        done
    else
        exec "$@"
    fi
